<?xml version="1.0" encoding="utf-8"?>
<!-- 3D button press effect: reduces elevation and scales down when pressed -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state: lower elevation + smaller scale -->
    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:propertyName="translationZ"
                android:duration="100"
                android:valueTo="2dp"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="100"
                android:valueTo="0.92"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="100"
                android:valueTo="0.92"
                android:valueType="floatType" />
        </set>
    </item>

    <!-- Default state: normal elevation + normal scale -->
    <item>
        <set>
            <objectAnimator
                android:propertyName="translationZ"
                android:duration="100"
                android:valueTo="6dp"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="100"
                android:valueTo="1.0"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="100"
                android:valueTo="1.0"
                android:valueType="floatType" />
        </set>
    </item>
</selector>
