<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/settings_icon_bg"
    android:padding="12dp"
    android:layout_marginBottom="6dp">

    <!-- Link icon -->
    <FrameLayout
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/profile_circle_bg"
        android:layout_marginEnd="12dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_link"
            app:tint="?attr/colorOnSurfaceVariant"
            android:contentDescription="Link" />

    </FrameLayout>

    <!-- URL + timestamp -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/linkUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://example.com"
            android:textSize="13sp"
            android:textColor="#CCCCCC"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/linkTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jan 15, 2026"
            android:textSize="11sp"
            android:textColor="#555555"
            android:fontFamily="@font/poppins_regular" />

    </LinearLayout>

</LinearLayout>
