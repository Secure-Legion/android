<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <View
        android:id="@+id/contactDividerTop"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="62dp"
        android:background="#1AFFFFFF"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/contactRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical">

        <com.securelegion.views.AvatarView
            android:id="@+id/contactAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Contact Photo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wizard"
                android:textSize="16sp"
                android:textColor="@color/lock_title_gray"
                android:fontFamily="@font/space_grotesk_bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/contactUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@wizard"
                android:textSize="13sp"
                android:textColor="#666666"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="1dp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/contactDivider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="62dp"
        android:background="#1AFFFFFF" />

    <!-- Hidden fields for backward compatibility -->
    <TextView android:id="@+id/contactInitial" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <TextView android:id="@+id/messageTimestamp" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <TextView android:id="@+id/lastMessage" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <TextView android:id="@+id/contactAddress" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <ImageView android:id="@+id/friendsIcon" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <ImageView android:id="@+id/starIcon" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <TextView android:id="@+id/pendingBadge" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />

</LinearLayout>
