<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Timestamp Header (Day/Date) -->
    <TextView
        android:id="@+id/timestampHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Today"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp"
        android:paddingBottom="8dp"
        android:visibility="gone" />

    <!-- Message Content Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Swipe-revealed timestamp (left side) -->
        <TextView
            android:id="@+id/swipeRevealedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34 PM"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="11sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <!-- Bubble + reactions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:clipChildren="false"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/reactionSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-6dp"
                android:layout_gravity="end"
                android:translationX="14dp"
                android:elevation="2dp"
                android:background="@drawable/reaction_glass_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:visibility="gone" />

            <!-- Message Bubble -->
            <LinearLayout
                android:id="@+id/messageBubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:maxWidth="280dp"
                android:background="@drawable/message_received_bg"
                android:padding="12dp">

                <TextView
                    android:id="@+id/pinIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pinned"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_medium"
                android:drawableStart="@drawable/ic_pin_small"
                    android:drawableTint="#FFFFFF"
                    android:drawablePadding="4dp"
                    android:layout_marginBottom="2dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/messageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message content"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>

        </LinearLayout>

        <!-- Selection Checkbox (shown in delete mode) -->
        <CheckBox
            android:id="@+id/messageCheckbox"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:button="@drawable/circular_checkbox" />

    </LinearLayout>

</LinearLayout>

