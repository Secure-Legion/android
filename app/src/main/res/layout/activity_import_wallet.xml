<?xml version="1.0" encoding="utf-8"?>
<!-- Import Wallet Activity -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Import Wallet"
            android:textSize="24sp"
            android:textColor="#999999"
            android:fontFamily="@font/space_grotesk_bold"
            android:gravity="center" />

        <!-- Spacer for alignment -->
        <View
            android:layout_width="42dp"
            android:layout_height="42dp" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/importButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Instructions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Import an existing wallet using a private key or seed phrase. Make sure to keep your keys secure."
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="24dp" />

            <!-- Wallet Type Selector -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WALLET TYPE"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <!-- Currency Dropdown -->
            <LinearLayout
                android:id="@+id/currencyDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/selectedCurrencyIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_solana"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Selected Currency" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/selectedCurrencyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solana"
                        android:textSize="16sp"
                        android:textColor="@color/text_white" />

                    <TextView
                        android:id="@+id/selectedCurrencySymbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SOL"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_down"
                    app:tint="@color/text_gray"
                    android:contentDescription="Dropdown" />

            </LinearLayout>

            <!-- Wallet Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WALLET NAME"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/walletNameInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/settings_box_bg"
                android:hint="My Imported Wallet"
                android:textColorHint="@color/text_gray"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:inputType="text"
                android:maxLines="1"
                android:layout_marginBottom="24dp" />

            <!-- Private Key / Seed Phrase -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRIVATE KEY / SEED PHRASE"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/privateKeyInput"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/settings_box_bg"
                android:hint="Enter private key or 12-word seed phrase"
                android:textColorHint="@color/text_gray"
                android:textColor="@color/text_white"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:padding="16dp"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:maxLines="5"
                android:layout_marginBottom="16dp" />

            <!-- Warning -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:padding="12dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_lock"
                    app:tint="#FFA500"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="top"
                    android:contentDescription="Warning" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Never share your private key or seed phrase. Anyone with access to it can control your funds."
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Import Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/importButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:background="@drawable/swap_button_bg"
        android:fontFamily="@font/poppins_semibold"
        android:text="Import Wallet"
        android:textAllCaps="false"
        android:textColor="@color/text_white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
